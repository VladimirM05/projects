.footer-links-list {
	display: flex;
	flex-direction: column;
	gap: 16px 0;
	font-weight: 600;

	.footer-link-item {
		.footer-link {
			padding: 8px;
			font-size: 16px;
			transition: background-color 0.2s ease-in;
			display: block;
			border-radius: 8px;
			line-height: 14px;

			&:hover {
				background-color: darken(#efefef, 15%);
			}
		}
	}
}
